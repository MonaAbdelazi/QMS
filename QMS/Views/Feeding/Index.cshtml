
@using QMS.Core.Resources
@using QMS.Data
@using GridMvc.Html
@model IEnumerable<QMS.Data.FEED_RECORD>

@{
    ViewBag.Title = GeneralRes.Index;
}

<h2>@GeneralRes.Index</h2>

<div style="text-align: right;">
    <form action="~/Feeding/Create">
        <button type="submit" class="btn btn-default alignPreview">
            <span class="glyphicon glyphicon-new-window"></span>
            @GeneralRes.Button_CreateNew
        </button>
    </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{

    columns.Add(model => model.CREATION_DATE).Sortable(true).SetWidth(50).Titled(QMSRes.CreationDate);

    columns.Add(model => model.BATCH_ID).Sortable(true).SetWidth(50).Titled(QMSRes.Batch);
    columns.Add(model => model.FEED_TYPE1.FEED_NAME).Sortable(true).SetWidth(50).Titled(QMSRes.FeedType);
    columns.Add(model => model.AMOUNT).Sortable(true).SetWidth(50).Titled(QMSRes.Amount);
    columns.Add(model => model.FEED_METHOD).Sortable(true).SetWidth(50).Titled(QMSRes.FeedingMethod);

    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(GeneralRes.Link_Delete, "Delete", new { id = o.SYSTEMID })).SetWidth(50);

}).WithPaging(10).Filterable().SetLanguage(GeneralRes.Lang)


