@using QMS.Core.Resources
@model QMS.Data.DIAGNOSES

@{
    ViewBag.Title = GeneralRes.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@GeneralRes.Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>


        <div class="row">

            <div class="col-lg-12">

                <div class="panel panel-light-blue">


                    <div class="panel-heading">
                        <h2 class="panel-title">@MenusRes.Diagnoses</h2>
                    </div>

                    <div class="panel-body">

                        @Html.ValidationSummary(true)

                        <hr />

                        <div class="form-group row">


                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Name)

                                @Html.TextBoxFor(model => model.SHORT_DESCRIPTION, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SHORT_DESCRIPTION)
                            </div>
                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Note)

                                @Html.TextAreaFor(model => model.LONG_DESCRIPTION, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LONG_DESCRIPTION)
                            </div>
                            <div class="col-lg-3">
                                @Html.CheckBox("recommendDisposal", new { @id = "recommendDisposal" })
                                @Html.Label(QMSRes.RecommendDisposalLabel)
                                @Html.Hidden("recommendDisposalHidden", "false" , new { @id = "recommendDisposalHidden" })

                            </div>

                        </div>
                        <div>

                            <center>
                                <p>
                                    <input type="button" value="@CommonRes.add" id="Add" class="btn btn-success hvr-bounce-in" onclick="add(this.id);" />
                                </p>
                            </center>



                        </div>



                        <div id="outputTable">

                        </div>

                        <div class="form-group">

                            <center class="mgtp">

                                <input type="submit" value="@CommonRes.Button_Save" class="btn btn-primary hvr-bounce-in" />
                                &nbsp;
                                @Html.ActionLink(CommonRes.BackToList, "Index", null, new { @class = "btn btn-warning hvr-bounce-in" })

                            </center>                            
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </form>
}


<div>
    @Html.ActionLink(CommonRes.BackToList, "Index")
</div>

@section Scripts {
    <script type="text/javascript">

        $('#recommendDisposal').change(function () {
            if (this.checked == true)
                $("#recommendDisposalHidden").val("true");
            if (this.checked == false) {
                $("#recommendDisposalHidden").val("false");
            }
        });

        function add(_ddlDesc) {

            var target = $('#outputTable');
            var input = {
                shortDescription: $('#SHORT_DESCRIPTION').val(),
                longDescription: $('#LONG_DESCRIPTION').val(),
                recommendDisposal: $('#recommendDisposalHidden').val()
            };
            $.ajax({
                url: '/Diagnoses/Add',
                type: "POST",
                data: JSON.stringify(input),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    target.html(data);

                },
                error: function () {
                }
            });

            $('#SHORT_DESCRIPTION').val("");
            $('#LONG_DESCRIPTION').val("");
            //$('#recommendDisposal').checked = false;
            $("#recommendDisposal").removeAttr("checked");
            $("#recommendDisposalHidden").val("false");
        }
    </script>
}