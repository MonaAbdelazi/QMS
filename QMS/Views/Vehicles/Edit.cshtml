@using QMS.Core.Resources
@model QMS.Data.DRIVERS

@{
    ViewBag.Title = CommonRes.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>


        <div class="row">

            <div class="col-lg-12">

                <div class="panel panel-light-blue">

                    <div class="panel-heading">
                        <h2 class="panel-title">@MenusRes.Drivers</h2>
                    </div>

                    <div class="panel-body">

                        @Html.ValidationSummary(true)

                        <hr />

                        <div class="form-group row">
                            @Html.HiddenFor(m => m.SYSTEMID)

                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Name)

                                @Html.TextBoxFor(model => model.DRIVER_NAME, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DRIVER_NAME)
                            </div>
                            <div class="col-lg-3">
                                @Html.Label(QMSRes.PhoneNo)

                                @Html.TextBoxFor(model => model.PHONE_NO, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DRIVER_NAME)
                            </div>
                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Name)

                                @Html.TextBoxFor(model => model.DRIVER_LICENSE, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DRIVER_LICENSE)
                            </div>
                            <div class="col-lg-3">
                                @Html.Label(QMSRes.ExpiryDate)

                                @Html.TextBoxFor(model => model.EXPIRY_DATE, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DRIVER_NAME)
                            </div>

                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Address)

                                @Html.TextAreaFor(model => model.ADDRESS, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ADDRESS)
                            </div>



                        </div>
                        



                        <div id="outputTable">

                        </div>

                        <div class="form-group">

                            <center class="mgtp">

                                <input type="submit" value="@CommonRes.Button_Save" class="btn btn-primary hvr-bounce-in" />
                                &nbsp;
                                @Html.ActionLink(CommonRes.BackToList, "Index", null, new { @class = "btn btn-warning hvr-bounce-in" })

                            </center>

                        </div>



                    </div>
                </div>

            </div>
        </div>

    </form>
}


<div>
    @Html.ActionLink(CommonRes.BackToList, "Index")
</div>

