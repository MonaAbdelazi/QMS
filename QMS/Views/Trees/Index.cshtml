
@using QMS.Core.Resources
@using QMS.Data
@using GridMvc.Html
@model IEnumerable<QMS.Data.Tree>

@{
    ViewBag.Title = CommonRes.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
     <form action="~/Trees/Create">
          <button type="submit" class="btn btn-default alignPreview">
               <span class="glyphicon glyphicon-new-window"></span>
               @CommonRes.Button_CreateNew
          </button>
     </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(model => model.Acc_No).Sortable(true).SetWidth(50).Titled(QMSRes.Acc_No);

    //columns.Add(model => model.GL_ID).Sortable(true).SetWidth(50).Titled(QMSRes.GL_ID);

    //columns.Add(model => model.Aux_ID).Sortable(true).SetWidth(50).Titled(QMSRes.Aux_ID);

    columns.Add(model => model.Acc_Name).Sortable(true).SetWidth(50).Titled(QMSRes.Acc_Name);

    columns.Add(model => model.Acc_Name_AR).Sortable(true).SetWidth(50).Titled(QMSRes.Acc_Name_AR);

    columns.Add(model => model.Type).Sortable(true).SetWidth(50).Titled(QMSRes.Type);

    columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(QMSRes.Status);

    columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(QMSRes.LastUpdate);

    columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(QMSRes.Entered_By);

    columns.Add(model => model.Cat).Sortable(true).SetWidth(50).Titled(QMSRes.Cat);

    columns.Add(model => model.Auxiliary.Aux_Name).Sortable(true).SetWidth(50).Titled(QMSRes.Aux_ID);

    columns.Add(model => model.GL.Genreal_Name).Sortable(true).SetWidth(50).Titled(QMSRes.GL_ID);

    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Acc_No })).SetWidth(50);
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Acc_No })).SetWidth(50);
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Acc_No })).SetWidth(50);

}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


