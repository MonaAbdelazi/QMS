
@using QMS.Core.Resources
@using QMS.Data
@using GridMvc.Html
@model IEnumerable<QMS.Data.Product>

@{
    ViewBag.Title = CommonRes.Index;
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
    <form action="~/Products/Create">
        <button type="submit" class="btn btn-default alignPreview">
            <span class="glyphicon glyphicon-new-window"></span>
            @CommonRes.Button_CreateNew
        </button>
    </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
		columns.Add(model => model.Product_ID).Sortable(true).SetWidth(50).Titled(QMSRes.ID);
	
    	columns.Add(model => model.Name).Sortable(true).SetWidth(50).Titled(QMSRes.Name);
	
    	columns.Add(model => model.Name_AR).Sortable(true).SetWidth(50).Titled(QMSRes.Name_AR);
	
    	columns.Add(model => model.BAR_CODE).Sortable(true).SetWidth(50).Titled(QMSRes.BarCode);
	
    	columns.Add(model => model.Comment).Sortable(true).SetWidth(50).Titled(QMSRes.Comment);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(QMSRes.Status);
	
    	columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(QMSRes.LastUpdate);
	
    	columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(QMSRes.Entered_By);
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Product_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Product_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Product_ID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


