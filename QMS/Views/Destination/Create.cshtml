@using QMS.Core.Resources
@model QMS.Data.DESTINATION_TESTS

@{
    ViewBag.Title = MenusRes.Destination;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@GeneralRes.Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>


        <div class="row">

            <div class="col-lg-12">

                <div class="panel panel-light-blue">


                    <div class="panel-heading">
                        <h2 class="panel-title">@MenusRes.Destination</h2>
                    </div>

                    <div class="panel-body">

                        @Html.ValidationSummary(true)

                        <hr />

                        <div class="form-group row">


                            <div class="col-lg-6">
                                @Html.Label(QMSRes.DestenationName)

                                @Html.TextBoxFor(model => model.DESTINATION.DESTINATION_NAME, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DESTINATION.DESTINATION_NAME)
                            </div>
                          
                        </div>
                    </div>
                </div>
                           <div class="panel panel-light-blue">

                            <div class="panel-heading">
                                <h2 class="panel-title">@QMSRes.RequiredTests</h2>
                            </div>
                               <hr />
                               <div class="panel-body">

                                   <div class="panel-light-blue">

                                       <div class="col-lg-6">
                                           @Html.Label(MenusRes.AnimalType)

                                           @Html.DropDownListFor(model => model.ANIMAL_TYPE_ID, ViewBag.typeID as SelectList, CommonRes.SelectDropDown, new { @class = "form-control", @onchange = "typeSelected();" })
                                       </div>
                                       <div class="col-lg-6">
                                           @Html.Label(QMSRes.QuaratinePeriod)

                                           @Html.TextBox("QuaratinePeriod",string.Empty, new { @class = "form-control", @type = "number" })
                                       </div>
                                     

                                   </div>
                                       <div class="col-lg-3">
                                           @Html.Label(MenusRes.Title_Testing)
                                           @Html.ListBox("ChooseRight", null, new { @class = "form-control", multiple = "multiple" })


                                       </div>
                                       <div class="col-lg-1">
                                           <br>
                                           <input id="ShiftRight" type="button" value=">>>" />
                                           <input id="ShiftLeft" type="button" value="<<<" />
                                   </div>
                                   <div class="col-lg-3">
                                       <br>
                                       @Html.Label("Selected Tests")


                                       @Html.ListBoxFor(model => model.TESTS, ViewBag.TEST_ID as SelectList, new { @class = "form-control", @onchange = "typeSelected();", @multiple = "multiple" })

                                       
                                   </div>

                                   </div>
                                   <div>
                                       <center>
                                           <p>
                                               <input type="button" value="@CommonRes.add" id="Add" class="btn btn-success hvr-bounce-in" onclick="add(this.id);" />
                                           </p>
                                       </center>
                                                                          </div>

                                  <div id="outputTable">
                                                                         </div>
                                   </div>
                           <div class="form-group">

                                <center class="mgtp">

                                    <input type="submit" value="@CommonRes.Button_Save" class="btn btn-primary hvr-bounce-in" />
                                    &nbsp;
                                    @Html.ActionLink(CommonRes.BackToList, "Index", null, new { @class = "btn btn-warning hvr-bounce-in" })

                                </center>

                            </div>
                            </div>
        </div>
    </form>
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#ShiftRight,#ShiftLeft").click(function (event) {
                var ID = $(event.target).attr("ID");
                var ChooseFrom = ID == "ShiftRight" ? "#ChooseRight" : "#TESTS";
                var moveTo = ID == "ShiftRight" ? "#TESTS" : "#ChooseRight";
                var SelectData = $(ChooseFrom + " :selected").toArray();
                $(moveTo).append(SelectData);
                SelectData.remove;
            });
        });
        function add(_ddlDesc) {

            var target = $('#outputTable');
            var input = { TEST_ID: $('#TESTS').val(), QuaratinePeriod: $('#QuaratinePeriod').val(), ANIMAL_TYPE_ID: $('#ANIMAL_TYPE_ID').val(), DESTINATION_NAME: $('#DESTINATION_NAME').val() };
            $.ajax({
                url: '/Destination/Add',
                type: "POST",
                data: JSON.stringify(input),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    target.html(data);

                },
                error: function () {
                }
            });

            $('#QuaratinePeriod').val("");
            $('#ANIMAL_TYPE_ID').val("");
        }
    </script>
}