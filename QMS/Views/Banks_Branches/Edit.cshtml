@using QMS.Core.Resources
@using GridMvc.Html
@using QMS.Data
@model QMS.Data.BANK

@{
    ViewBag.Title = CommonRes.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>


        <div class="row">

            <div class="col-lg-12">

                <div class="panel panel-light-blue">


                    <div class="panel-heading">
                        <h2 class="panel-title">@MenusRes.BanksAndBranches</h2>
                    </div>

                    <div class="panel-body">

                        @Html.ValidationSummary(true)

                        <hr />

                        <div class="form-group row">
                            @Html.HiddenFor(m => m.SYSTEMID)




                            <div class="col-lg-3">
                                @Html.Label(QMSRes.BankName)

                                @Html.TextBoxFor(model => model.BANK_NAME, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BANK_NAME)
                            </div>

                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Status)
                                @Html.DropDownListFor(m => m.STATUS, ViewBag.Status as SelectList, htmlAttributes: new { @Value = Model.STATUS })
                                @Html.ValidationMessageFor(model => model.STATUS)
                            </div>
                        </div>

                        <div>
                            <div class="col-lg-3">
                                @Html.Label(QMSRes.AddNewBranch)
                                @Html.TextBox("BranchName", string.Empty, new { @class = "form-control" })
                                <input type="button" value="@CommonRes.add" id="Add" class="btn btn-success hvr-bounce-in" onclick="add(this.id);" />
                            </div>
                        </div>

                        <div id="outputTableInit">
                            <table id="tableData" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>

                                        <th>
                                            @Html.DisplayName(QMSRes.BranchName)
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < (ViewBag.EditBranches as IEnumerable<BRANCH>).Count<BRANCH>(); i++)
                                    {
                                        var items = (ViewBag.EditBranches as IEnumerable<BRANCH>).ToArray<BRANCH>();
                                        <tr>
                                            <td>
                                                @Html.Raw(i + 1)
                                            </td>
                                            <td>
                                                <input id="items[@i].BRANCH_NAME" class="form-control" value="@items[i].BRANCH_NAME" type="text" disabled="disabled">
                                            </td>
                                            <td>
                                                <input type="button" value="@CommonRes.Delete" class="btn btn-success hvr-bounce-in" onclick="deleteItem(@items[i].SYSTEMID);" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                        <div id="outputTable">

                        </div>

                        <div class="form-group">

                            <center class="mgtp">

                                <input type="submit" value="@CommonRes.Button_Save" class="btn btn-primary hvr-bounce-in" />
                                &nbsp;
                                @Html.ActionLink(CommonRes.BackToList, "Index", null, new { @class = "btn btn-warning hvr-bounce-in" })

                            </center>

                        </div>



                    </div>
                </div>

            </div>
        </div>

    </form>
}


<div>
    @Html.ActionLink(CommonRes.BackToList, "Index")
</div>

@section Scripts {
    <script type="text/javascript">

        function add(_ddlDesc) {

            var target = $('#outputTable');
            var input = { newBranchName: $('#BranchName').val() };
            $.ajax({
                url: '/Banks_Branches/EditAdd',
                type: "POST",
                data: JSON.stringify(input),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    target.html(data);

                },
                error: function () {
                }
            });

            $("#outputTableInit").hide();

            $('#BranchName').val("");
        }

        function deleteItem(systemId) {

            var target = $('#outputTable');
            var input = { id: systemId };
            $.ajax({
                url: '/Banks_Branches/EditDelete',
                type: "POST",
                data: JSON.stringify(input),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    target.html(data);

                },
                error: function () {
                }
            });

            $("#outputTableInit").hide();

        }
    </script>
}