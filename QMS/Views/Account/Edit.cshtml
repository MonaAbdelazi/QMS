@using QMS.Core.Resources
@model QMS.Data.AspNetUser

@{
    ViewBag.Title = CommonRes.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form>


        <div class="row">

            <div class="col-lg-12">

                <div class="panel panel-light-blue">


                    <div class="panel-heading">

                        <h2 class="panel-title">MenuRes.AspNetUser</h2>

                    </div>


                    <div class="panel-body">
                        <hr />
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group row">


                            <div class="col-lg-3">
                                @Html.Label(QMSRes.Name)

                                @Html.TextBoxFor(m => m.UserName, null, htmlAttributes: new { @class = "form-control" })

                             
                            </div>

 

                        
                            <div class="col-lg-3">

                                @Html.Label(QMSRes.WareHouse_ID)

                                @Html.DropDownListFor(m => m.WareHouse_ID, ViewBag.WareHouse_ID as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.WareHouse_ID)

                            </div>

                        </div>





 

                        <div class="form-group">

                            <center class="mgtp">

                                <input type="submit" value="@CommonRes.Button_Save" class="btn btn-primary hvr-bounce-in" />
                                &nbsp;
                                @Html.ActionLink(CommonRes.BackToList, "Index", null, new { @class = "btn btn-warning hvr-bounce-in" })

                            </center>

                        </div>



                    </div>
                </div>

            </div>
        </div>

    </form>
}


<div>
    @Html.ActionLink(CommonRes.BackToList, "Index")
</div>

