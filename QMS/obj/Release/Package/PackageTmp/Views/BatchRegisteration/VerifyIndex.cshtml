
@using QMS.Core.Resources
@using QMS.Data
@using GridMvc.Html
@model IEnumerable<QMS.Controllers.BatchViewModel>

@{
    ViewBag.Title = GeneralRes.Index;
    var RepeaterVwMdl = Model.ToArray();

}



@using (Html.BeginForm("VerifyIndex", "BatchRegisteration", RepeaterVwMdl, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<br />
<table class="table table-striped grid-table" style="width:500px;">
    <tr>
        <th>
            #
        </th>
        <th>
            @*@Html.TextBox("BudgetYear", Screens.BudgetYear, new {@class="Year" })*@
            @Html.Label(QMSRes.BatchNumber, new { @style = "width:70px" })
        </th>

        <th>
            @Html.Label(QMSRes.PermitReference, new { @style = "width:100px" })
       </th>
        <th>
                        @Html.Label("Validated", new { @style = "width:100px" })
        </th>
        <th>
            @Html.Label("Not Validated", new { @style = "width:100px" })
        </th>
        </tr>
        @{ int j = 0;
            int r = 1; }
        @foreach (var item in Model.ToArray())
        {
            <td>
                @r
            </td>
            <td>

                @Html.TextBoxFor(m => item.batch.SYSTEMID, new { @type = "text", @id = j, @Name = "RepeaterVwMdl[" + j + "].batch.SYSTEMID", @style = "width:100px", @class = "form-control", @readonly = "readonly" })
            </td>
            <td>

                @Html.TextBoxFor(m => item.batch.PermitReference, new { @type = "text", @id = j, @Name = "RepeaterVwMdl[" + j + "].batch.PermitReference", @style = "width:100px", @class = "form-control", @readonly = "readonly" })

            </td>
                <td class="col-lg-4">
                    @Html.CheckBoxFor(m => item.verified, new { @class = "apprv-form-control", @type = "checkbox", @id = j, @Name = "RepeaterVwMdl[" + j + "].verified", @style = "width:20px" })
                </td>
                <td class="col-lg-4">
                    @Html.CheckBoxFor(m => item.NotValid, new { @class = "apprv-form-control", @type = "checkbox", @id = j, @Name = "RepeaterVwMdl[" + j + "].NotValid", @style = "width:20px" })
                </td>
        }
             </table>
            <center>
                <input class="btn btn-primary btn active" type="submit" value="@GeneralRes.Button_Save">

            </center>
        }