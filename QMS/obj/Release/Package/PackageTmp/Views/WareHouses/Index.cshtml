
@using QMS.Core.Resources
@using QMS.Data
@using GridMvc.Html
@model IEnumerable<QMS.Data.WareHouse>

@{
    ViewBag.Title = CommonRes.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
    <form action="~/WareHouses/Create">
        <button type="submit" class="btn btn-default alignPreview">
            <span class="glyphicon glyphicon-new-window"></span>
            @CommonRes.Button_CreateNew
        </button>
    </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
	
    	columns.Add(model => model.Name).Sortable(true).SetWidth(50).Titled(QMSRes.Name);
	
    	columns.Add(model => model.Name_AR).Sortable(true).SetWidth(50).Titled(QMSRes.Name_AR);
	
	
	
    	columns.Add(model => model.Size).Sortable(true).SetWidth(50).Titled(QMSRes.Size);
	
    	columns.Add(model => model.Location).Sortable(true).SetWidth(50).Titled(QMSRes.Location);
	
    	columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(QMSRes.Entered_By);
	
    	columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(QMSRes.LastUpdate);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(QMSRes.Status);
	
    	columns.Add(model => model.Branch.Branch_Name).Sortable(true).SetWidth(50).Titled(QMSRes.Branch_Name);
	
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Warehouse_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Warehouse_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Warehouse_ID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


