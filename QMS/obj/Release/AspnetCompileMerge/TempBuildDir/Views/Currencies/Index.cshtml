
@using NMS.Core.Resources
@using NMS.Data
@using GridMvc.Html
@model IEnumerable<NMS.Data.Currency>

@{
    ViewBag.Title = CommonRes.Index;
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
    <form action="~/Currencies/Create">
        <button type="submit" class="btn btn-default alignPreview">
            <span class="glyphicon glyphicon-new-window"></span>
            @CommonRes.Button_CreateNew
        </button>
    </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
		columns.Add(model => model.Curr_ID).Sortable(true).SetWidth(50).Titled(NMSRes.ID);
	
    	columns.Add(model => model.Curr_Name).Sortable(true).SetWidth(50).Titled(NMSRes.Name);
	
    	columns.Add(model => model.Curr_Name_AR).Sortable(true).SetWidth(50).Titled(NMSRes.Name_AR);
	
    	columns.Add(model => model.CurrentCost).Sortable(true).SetWidth(50).Titled(NMSRes.CurrentCost);
	
    	columns.Add(model => model.EX_Rate).Sortable(true).SetWidth(50).Titled(NMSRes.EX_Rate);
	
    	columns.Add(model => model.Last_Ex_Rare_Date).Sortable(true).SetWidth(50).Titled(NMSRes.Last_Ex_Rare_Date);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(NMSRes.Status);
	
    	columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(NMSRes.LastUpdate);
	
    	columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(NMSRes.Entered_By);
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Curr_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Curr_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Curr_ID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


