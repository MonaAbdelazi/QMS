
@using NMS.Core.Resources
@using NMS.Data
@using GridMvc.Html
@model IEnumerable<NMS.Data.WareHouse>

@{
    ViewBag.Title = CommonRes.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
    <form action="~/WareHouses/Create">
        <button type="submit" class="btn btn-default alignPreview">
            <span class="glyphicon glyphicon-new-window"></span>
            @CommonRes.Button_CreateNew
        </button>
    </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
		columns.Add(model => model.Warehouse_ID).Sortable(true).SetWidth(50).Titled(NMSRes.ID);
	
    	columns.Add(model => model.Name).Sortable(true).SetWidth(50).Titled(NMSRes.Name);
	
    	columns.Add(model => model.Name_AR).Sortable(true).SetWidth(50).Titled(NMSRes.Name_AR);
	
    	columns.Add(model => model.Emp_ID).Sortable(true).SetWidth(50).Titled(NMSRes.Emp_ID);
	
    	columns.Add(model => model.Keeper_Phone).Sortable(true).SetWidth(50).Titled(NMSRes.Keeper_Phone);
	
    	columns.Add(model => model.Size).Sortable(true).SetWidth(50).Titled(NMSRes.Size);
	
    	columns.Add(model => model.Location).Sortable(true).SetWidth(50).Titled(NMSRes.Location);
	
    	columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(NMSRes.Entered_By);
	
    	columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(NMSRes.LastUpdate);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(NMSRes.Status);
	
    	columns.Add(model => model.Branch.Branch_Name).Sortable(true).SetWidth(50).Titled(NMSRes.Branch_Name);
	
    	columns.Add(model => model.Employess.Name).Sortable(true).SetWidth(50).Titled(NMSRes.EmpName);
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Warehouse_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Warehouse_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Warehouse_ID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


