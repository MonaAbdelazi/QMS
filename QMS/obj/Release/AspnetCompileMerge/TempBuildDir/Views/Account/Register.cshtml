@section Scripts {
    <script type="text/javascript">
                function checkCODE() {


                    var _CODE = $('#Code').val();
                    var _Phone = $('#PHONE_NO').val();
                    var input = { code: _CODE, Mobile: _Phone };


                    //var output;
                    $.ajax({

                        url: '/Account/CheckSentCode',
                        type: "POST",
                        data: JSON.stringify(input),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",

                        success: function (data) {

                            if (data == "Exist") {
                                $('#errMsgAr').show();
                            } else {
                                $('#errMsgAr').hide();
                            }

                        },

                        error: function () {
                        }
                    });
                }

                function SendCode() {


                    var _Phone = $('#PHONE_NO').val();

                    var input = { Mobileno: _Phone };


                    //var output;
                    $.ajax({

                        url: '/Account/SendSms',
                        type: "POST",
                        data: JSON.stringify(input),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",

                        success: function (data) {

                            if (data == "Exist") {
                                $('#errMsgAr').show();
                            } else {
                                $('#errMsgAr').hide();
                            }

                        },

                        error: function () {
                        }
                    });
                }
                //



                function GetMemDataa() {

                    var _Eng_no = $('#Eng_no').val();



                    var input = { memno: _Eng_no };
                    $.ajax({


                        url: '/Account/GetMemData',
                        type: "POST",
                        data: JSON.stringify(input),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data === "NotExist") {
                                $('#errMsgAr2').show();
                            }
                            else {
                                $('#Eng_name').val(data);
                            }
                        },
                        error: function () {
                            return;
                        }
                    });
                }
                //
                function CheckIfExist() {

                    var _Eng_no = $('#Eng_no').val();



                    var input = { memno: _Eng_no };
                    $.ajax({


                        url: '/Account/CheckifApplied',
                        type: "POST",
                        data: JSON.stringify(input),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data === "Exist") {
                                $('#errMsgAr5').show();
                            }
                            else {
                                $('#errMsgAr5').hide();

                            }
                        },
                        error: function () {
                            return;
                        }
                    });
                }
    </script>
}

