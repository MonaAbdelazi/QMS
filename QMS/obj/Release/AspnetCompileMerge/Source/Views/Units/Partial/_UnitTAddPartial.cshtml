@model IEnumerable<NMS.Data.Unit>
@using NMS.Core.Resources
@using NMS


<style type="text/css">
    .paging-nav {
        text-align: right;
        padding-top: 2px;
    }

        .paging-nav a {
            margin: auto 1px;
            text-decoration: none;
            display: inline-block;
            padding: 1px 7px;
            background: #91b9e6;
            color: white;
            border-radius: 3px;
        }

        .paging-nav .selected-page {
            background: #187ed5;
            font-weight: bold;
        }

    .paging-nav,
    #tableData {
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }
</style>
<div id="outputTable">



    <table id="tableData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayName(NMSRes.Unit_Name)
                </th>
                <th>
                    @Html.DisplayName(NMSRes.Unit_Name_AR)
                </th>
                <th>
                    @Html.DisplayName(NMSRes.Comment)
                </th>
               <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ToArray().Length; i++)
            {
                var items = Model.ToArray();
                <tr>
                    <td>
                        @Html.Raw(i + 1)
                    </td>
                    <td>
                        <input id="items[@i].Unit_Name" class="form-control" value="@items[i].Unit_Name" type="text" disabled="disabled">
                       
                    </td>
                    <td>
                        <input id="items[@i].Name_AR" class="form-control" value="@items[i].Unit_Name_AR" type="text" disabled="disabled">
                        @Html.Hidden("items[" + @i + "].MAXSAL", items[i].Unit_Name_AR)
                    
                    </td>
                    <td>
                        <input id="items[@i].Comment" class="form-control" value="@items[i].Comment" type="text" disabled="disabled">
                        @Html.Hidden("items[" + @i + "].MAXSAL", items[i].Comment)

                    </td>
                   
                </tr>
            }
        </tbody>
    </table>

</div>
