
@using NMS.Core.Resources
@using NMS.Data
@using GridMvc.Html
@model IEnumerable<NMS.Data.Branch>

@{
    ViewBag.Title = CommonRes.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
     <form action="~/Branches/Create">
          <button type="submit" class="btn btn-default alignPreview">
               <span class="glyphicon glyphicon-new-window"></span>
               @CommonRes.Button_CreateNew
          </button>
     </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
		columns.Add(model => model.Branch_ID).Sortable(true).SetWidth(50).Titled(NMSRes.Branch_ID);
	
    	columns.Add(model => model.City_ID).Sortable(true).SetWidth(50).Titled(NMSRes.City_ID);
	
    	columns.Add(model => model.Country_ID).Sortable(true).SetWidth(50).Titled(NMSRes.Country_ID);
	
    	columns.Add(model => model.Branch_Name).Sortable(true).SetWidth(50).Titled(NMSRes.Branch_Name);
	
    	columns.Add(model => model.Branch_Name_AR).Sortable(true).SetWidth(50).Titled(NMSRes.Branch_Name_AR);
	
    	columns.Add(model => model.Opening_Date).Sortable(true).SetWidth(50).Titled(NMSRes.Opening_Date);
	
    	columns.Add(model => model.Location).Sortable(true).SetWidth(50).Titled(NMSRes.Location);
	
    	columns.Add(model => model.Comment).Sortable(true).SetWidth(50).Titled(NMSRes.Comment);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(NMSRes.Status);
	
    	columns.Add(model => model.LastUpdate).Sortable(true).SetWidth(50).Titled(NMSRes.LastUpdate);
	
    	columns.Add(model => model.Entered_By).Sortable(true).SetWidth(50).Titled(NMSRes.Entered_By);
	
    	columns.Add(model => model.City.Name).Sortable(true).SetWidth(50).Titled(NMSRes.City_Name);
	
    	columns.Add(model => model.Country.Name).Sortable(true).SetWidth(50).Titled(NMSRes.Country_Name);
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.Branch_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.Branch_ID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.Branch_ID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


